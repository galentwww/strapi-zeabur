{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "singularName": "student",
    "pluralName": "students",
    "displayName": "student"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "grade": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::grade.grade",
      "inversedBy": "students"
    },
    "parentPhone": {
      "type": "string",
      "required": true,
      "regex": "^1[3456789]\\d{9}$"
    },
    "enrollmentDate": {
      "type": "date"
    },
    "studentStatus": {
      "type": "enumeration",
      "default": "active",
      "enum": [
        "active",
        "inactive",
        "graduated",
        "transferred"
      ]
    },
    "class_hours": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::class-hour.class-hour",
      "mappedBy": "student"
    },
    "schedules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::schedule.schedule",
      "mappedBy": "student"
    },
    "description": {
      "type": "text"
    },
    "enrollmentYear": {
      "type": "integer"
    },
    "attendSchool": {
      "type": "string"
    },
    "subject_combinations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::subject.subject",
      "inversedBy": "students"
    },
    "classgroup_log": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::classgroup-log.classgroup-log",
      "inversedBy": "students"
    }
  }
}
